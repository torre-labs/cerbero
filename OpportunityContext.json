{
  "$schema": "http://iglucentral.com/schemas/com.snowplowanalytics.self-desc/schema/jsonschema/1-0-0#",
  "self": {
    "vendor": "com.torrelabs",
    "name": "OpportunityContext",
    "format": "jsonschema",
    "version": "1-0-0"
  },
  "description": "Context for the opportunity related events",
  "properties": {
    "id": {
      "description": "Id of the opportunity",
      "type": "string",
      "maxLength": 50
    },
    "ownerGgId": {
      "description": "GgId of the opportunity poster",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "opportunity": {
      "description": "Name of the opportunity",
      "type": ["string", "null"],
      "maxLength": 150
    },
    "objective": {
      "description": "Objective of the opportunity",
      "type": ["string", "null"],
      "maxLength": 200
    },
    "theme": {
      "description": "Theme of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "completion": {
      "description": "Rate of completion of the opportunity",
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 10
    },
    "compensationValue": {
      "description": "Compensation value of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "compensationVisible": {
      "description": "is compensation visible",
      "type": ["boolean", "null"]
    },
    "periodicity": {
      "description": "Periodicity of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "created": {
      "description": "Creation date of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "deadline": {
      "description": "Deadline of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "stableOn": {
      "description": "Property of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "externalApplicationUrl": {
      "description": "Exernal url of the application",
      "type": ["string", "null"],
      "maxLength": 1000
    },
    "externalInfoSourceUrl": {
      "description": "Source url info where the application was obtained",
      "type": ["string", "null"],
      "maxLength": 1000
    },
    "crawled": {
      "description": "If the job was crawled",
      "type": ["boolean", "null"]
    },
    "status": {
      "description": "Status of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    },
    "locale": {
      "description": "locale property of the opportunity",
      "type": ["string", "null"],
      "maxLength": 50
    }
  },
  "additionalProperties": true,
  "type": "object",
  "required": ["id"]
}